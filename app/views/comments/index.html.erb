<h2>Listing comments</h2>

<table border="1" cellpadding="2">
	<thead> 
		<tr>
	    <th>Title</th>
	    <th>Commenter</th>
	    <th>Comment On</th>
	    <th>Spam?</th>
	    <th colspan="3">Actions</th>
  	</tr>
	</thead>
	<tbody>
	  <% @comments.each do |comment| %>
		<%= render :partial => 'table_row', :locals => {:comment => comment} %>
	  <% end %>
	</tbody>
</table>

<%= will_paginate @comments %>

<br />

<%= link_to 'New comment', :action => 'create' %>

<%- content_for :javascript do -%>
<%= javascript_include_tag 'comment-form' %>
<%- end -%>