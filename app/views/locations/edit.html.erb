<h2>Editing location <%= @location.name %></h2>

<%= button_to "Delete location", @location, :method => :delete %>

<% if @location.is_visible? %>
  <%= button_to 'Hide location', change_visibility_location_path(@location, :visibility => false) %>
<% else %>
  <%= button_to 'Approve location', change_visibility_location_path(@location, :visibility => true) %>
<% end %>

<%= semantic_form_for(@location) do |form| -%>
  <%= render :partial => 'inputs', :locals => {:f => form} %>
<%- end -%>

<p><%= link_to 'Show', @location %> | <%= link_to 'Back', locations_path %></p>

